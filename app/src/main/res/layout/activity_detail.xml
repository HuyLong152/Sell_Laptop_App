<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@drawable/style_background">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBuy"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttona2"
        android:fontFamily="@font/poppins_bold"
        android:text="Buy now"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@id/imageView4" />

    <ImageView
        android:id="@+id/mainImg"
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/img_producta2"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/laptop" />

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/mainImg"
        app:layout_constraintStart_toStartOf="@+id/mainImg"
        app:srcCompat="@drawable/laptop" />

    <ImageView
        android:id="@+id/img_3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="10dp"

        app:layout_constraintBottom_toBottomOf="@+id/mainImg"
        app:layout_constraintEnd_toEndOf="@+id/mainImg"
        app:layout_constraintStart_toStartOf="@+id/mainImg"

        app:srcCompat="@drawable/laptop" />

    <ImageView
        android:id="@+id/img_4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="10dp"

        app:layout_constraintBottom_toBottomOf="@+id/mainImg"
        app:layout_constraintEnd_toEndOf="@+id/mainImg"
        app:srcCompat="@drawable/laptop" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="302dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/border_title_a2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_bold"
        android:hint="FREE SHIPPING"
        android:letterSpacing="0.2"
        android:textColor="@color/black"
        android:textColorHint="#909090"

        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/mainImg" />

    <TextView
        android:id="@+id/pName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sony WH-1000XM4"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:textSize="22sp"
        android:maxLines="1"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/pTitle"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="The intuitive and intelligent WH-1000XM4 headphones bring you new improvements in industry-leading noise cancelling technology."
        android:textSize="12sp"
        android:maxLines="3"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#909090"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/pName" />

    <TextView
        android:id="@+id/pPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/poppins_bold"
        android:text="$ 4.999"
        android:textColor="#FF5500"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/imageView4" />

    <ImageButton
        android:id="@+id/iconBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:background="@drawable/button_back"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_left_1" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/heart" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button_quantity"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:fontFamily="@font/titan_one"
            android:gravity="center"
            android:text="+"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btnQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/titan_one"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"

            android:textSize="15dp" />

        <TextView
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/titan_one"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white"

            android:textSize="20dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>